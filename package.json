{
  "name": "analytics",
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "vitest",
    "test.integration": "vitest --config vitest.integration.config.ts",
    "test.load.down": "docker-compose -f docker-compose.load.yml down",
    "test.load.build": "npm run build --workspace=packages/load-test",
    "test.load.docker.detach": "docker-compose -f docker-compose.load.yml up -d",
    "test.load.up": "npm run test.load.docker.detach && npm run test.load.build",
    "test.load.run": "docker-compose -f docker-compose.load.yml run k6 run -o xk6-influxdb",
    "test.load.ping": "npm run test.load.up && npm run test.load.run -- /scripts/ping.js",
    "test.load.event": "npm run test.load.up && npm run test.load.run -- /scripts/event.js",
    "test.load.report": "npm run test.load.up && npm run test.load.run -- /scripts/report.js",
    "test.load.archive": "npm run test.load.up && npm run test.load.run -- /scripts/archive.js",
    "monolith.start": "npm start --workspace=packages/monolith",
    "monolith.build": "npm run build --workspace=packages/monolith",
    "monolith.build.yandex": "npm run build.yandex --workspace=packages/monolith",
    "monolith.build.yandex.serverless": "npm run build.yandex.serverless --workspace=packages/monolith",
    "monolith.develop": "npm run develop --workspace=packages/monolith",
    "monolith.docker.develop": "docker-compose -f docker-compose.monolith.develop.yml up",
    "monolith.docker.develop.down": "docker-compose -f docker-compose.monolith.develop.yml down",
    "monolith.docker.develop.build": "docker-compose -f docker-compose.monolith.develop.yml build",
    "monolith.docker.develop.detach": "docker-compose -f docker-compose.monolith.develop.yml up -d",
    "monolith.docker.release": "docker-compose -f docker-compose.monolith.release.yml up",
    "monolith.docker.release.down": "docker-compose -f docker-compose.monolith.release.yml down",
    "monolith.docker.release.build": "docker-compose -f docker-compose.monolith.release.yml build",
    "monolith.docker.release.detach": "docker-compose -f docker-compose.monolith.release.yml up -d",
    "monolith.docker.yandex": "docker-compose -f docker-compose.monolith.release.yandex.yml up",
    "monolith.docker.yandex.down": "docker-compose -f docker-compose.monolith.release.yandex.yml down",
    "monolith.docker.yandex.build": "docker-compose -f docker-compose.monolith.release.yandex.yml build",
    "monolith.docker.yandex.detach": "docker-compose -f docker-compose.monolith.release.yandex.yml up -d",
    "monolith.docker.yandex.serverless": "docker-compose -f docker-compose.monolith.release.yandex.serverless.yml up",
    "monolith.docker.yandex.serverless.down": "docker-compose -f docker-compose.monolith.release.yandex.serverless.yml down",
    "monolith.docker.yandex.serverless.build": "docker-compose -f docker-compose.monolith.release.yandex.serverless.yml build",
    "monolith.docker.yandex.serverless.detach": "docker-compose -f docker-compose.monolith.release.yandex.serverless.yml up -d",
    "ping.serverless.build": "npm run serverless.build --workspace=packages/ping",
    "events.serverless.build": "npm run serverless.build --workspace=packages/events",
    "report.serverless.build": "npm run serverless.build --workspace=packages/report",
    "archive.serverless.build": "npm run serverless.build --workspace=packages/archive"
  },
  "author": "Fedor Alekseev",
  "license": "MIT",
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@types/archiver": "^6.0.3",
    "@types/node": "^24.0.1",
    "@types/ramda": "^0.30.2",
    "@yandex-cloud/function-types": "^2.1.2",
    "esbuild": "^0.25.5",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "mongodb": "^6.17.0",
    "ramda": "^0.30.1"
  }
}